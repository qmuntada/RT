scene
{
	name(SCENE1)
	cam_pos(-10 1 -10)
	cam_dir(0 1 0)
	render(640 480)
}

content
{
	object(light)
	{
		color(256 256 256)
		pos(-5 0 -15)
		power(75);
	}
	object(cone)
	{
		color(10 120 180)
		pos(5 2 -3)
		reflect(90)
	}
	object(cylinder)
	{
		size(100)
		color(64 256 32)
		pos(-2 0 -2)
		reflect(90)
	}
	object(plane)
	{
		color(256 256 256)
		rot(0 1 0)
		pos(0 -1 0)
		reflect(25)
	}
	object(sphere)
	{
		size(200)
		color(200 20 10)
		pos(-5 0 2)
		reflect(90)
	}
}
