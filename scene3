scene
{
	name(SCENE3)
	cam_pos(0 1 10)
	cam_dir(3 1 2)
	render(1600 900)
}

content
{
	object(light)
	{
		pos(15 10 10)
		power(90);
	}
	object(light)
	{
		pos(2 1 -5)
		power(90);
	}
	object(cone)
	{
		pos(5 2 -3)
		reflect(25)
	}
	object(cylinder)
	{
		pos(-2 0 -2)
		reflect(25)
	}
	object(plane)
	{
		rot(0 1 0)
		pos(0 -1 0)
		reflect(25)
	}
	object(plane)
	{
		rot(0 0 90)
		pos(0 0 -30)
		reflect(25)
	}
	object(sphere)
	{
		size(300)
		pos(8 2 0)
		reflect(25)
	}
}
